{
  "compilerOptions": {
    "target": "es2016", 
    "jsx": "react-jsx",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      // Simulate remote types import
      "*": ["*", "../entities/.wp_federation/*"]
    },
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "skipLibCheck": true 
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
